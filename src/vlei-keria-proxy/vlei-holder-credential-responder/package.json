{
  "name": "vlei-holder-credential-responder",
  "version": "1.0.0",
  "description": "Daemon application that automatically responds to VLEI credential presentation requests",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "dev": "tsc --watch & npm run start:daemon",
    "start:daemon": "node --watch dist/main.js",
    "debug": "npm run build && node --inspect dist/main.js",
    "debug:brk": "npm run build && node --inspect-brk dist/main.js",
    "debug:dev": "npm run build && node --inspect --watch dist/main.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "vlei",
    "keria",
    "keri",
    "holder",
    "credentials",
    "daemon",
    "ipex"
  ],
  "author": "VLEI Development Team",
  "license": "Apache-2.0",
  "dependencies": {
    "signify-ts": "^0.2.1",
    "vlei-keria-common": "file:../vlei-keria-common",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}