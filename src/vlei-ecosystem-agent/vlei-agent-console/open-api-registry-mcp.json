                "$ref": "#/components/schemas/CreateCertifierRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCertifierRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the newly created certifier",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CertifierDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CertifierDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CertifierDetails"
                }
              }
            }
          },
          "400": {
            "description": "If the request is invalid",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "409": {
            "description": "If a certifier with the same ID already exists",
